    <style type="text/css">
        div#header a.selected {
            color: #AF0000;
        }

        a {
            color: #ae6662;
            text-decoration: none;
        }
        div.validation-summary-errors ul li {
            min-height: auto;
            padding: 0;
            width: auto;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            $('div#header ul>li').each(function () {
                if ($(this).children('a').html() == '@ViewBag.Title') {
                    $(this).children('a').addClass('selected');
                } else {
                    $(this).children('a').remove('class', 'selected');
                }
            });

            $('#SubmitEmail').click(function () {
                debugger;
                var email = $('#EmailAddress').val();
                var username = '@Guid.NewGuid().ToString().Substring(0,10)';
                var user = {
                    UserName: username,
                    Password: 'anonymous',
                    Email: email,
                    ConfirmPassword: 'anonymous'
                };
                var userDetails = JSON.stringify(user);

                $.ajax({
                    url: "/api/EmailList/",
                    type: "POST",
                    contentType: "application/json",
                    data: userDetails,
                    success: function (data, textStatus, jqXHR) {
                        alert(textStatus + data);
                    },
                    error: function (requestObject, error, errorThrow) {
                        alert(error +': '+ errorThrow);
                    }
                });
                return false;
            });
        });
    </script>
